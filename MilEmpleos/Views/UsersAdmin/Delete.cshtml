@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Borrar Usuario";
}

<h2>@ViewBag.Title</h2>

<h3>¿Seguro que quieres borrar este usuario?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Listado de Usuarios", "Index")
        </div>
    }
</div>
